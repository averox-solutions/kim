<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
        http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd" default-activation="eager">

    <cm:property-placeholder id="kimiosServerCfg" persistent-id="org.kimios.server.app" update-strategy="none"
                             activation="eager">
    </cm:property-placeholder>

    <bean id="jodConverterController" class="org.kimios.converter.jodconverter.controller.impl.JodConverterController">
        <property name="jodConverterUrl" value="${converter.jodconverter.url}" />
    </bean>

    <service interface="org.kimios.converter.jodconverter.controller.IJodConverterController" ref="jodConverterController" />

</blueprint>
