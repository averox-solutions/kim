    <build>
        <filters>
            <filter>${pom.basedir}/src/karaf-conf/karaf-4.0.4.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>features.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>kimios-ds.xml</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>filter</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>resourcesrv-dependencies</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>kimios-kernel</includeArtifactIds>
                            <outputDirectory>${project.build.directory}/server-conf</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>resourcecli-dependencies</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>kimios-client-api</includeArtifactIds>
                            <outputDirectory>${project.build.directory}/client-conf</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <!--generate Default Kimios Server Configuration File from a specific properties file -->
                    <execution>
                        <id>filtersrvconf</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <filters>
                                <filter>${project.basedir}/src/build-conf/docker-values.properties</filter>
                            </filters>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/server-conf/</directory>
                                    <include>META-INF/settings/tpl/kimios.properties</include>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/server-conf-ok</outputDirectory>
                        </configuration>
                    </execution>
                    <!--generate Default Kimios Client Configuration File from a specific properties file -->
                    <execution>
                        <id>filtercliconf</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <filters>
                                <filter>${project.basedir}/src/build-conf/docker-values.properties</filter>
                            </filters>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/client-conf</directory>
                                    <include>META-INF/settings/tpl/kimios.properties</include>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/client-conf-ok</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.karaf.tooling</groupId>
                <artifactId>karaf-maven-plugin</artifactId>
                <extensions>true</extensions>
                <version>${karaf.version}</version>
                <executions>
                    <execution>
                        <id>featuregen</id>
                        <goals>
                            <goal>features-generate-descriptor</goal>
                        </goals>
                        <configuration>
                            <attachmentArtifactClassifier>features</attachmentArtifactClassifier>
                            <attachmentArtifactType>xml</attachmentArtifactType>
                            <aggregateFeatures>true</aggregateFeatures>
                            <includeTransitiveDependency>false</includeTransitiveDependency>
                            <checkDependencyChange>false</checkDependencyChange>
                            <failOnDependencyChange>false</failOnDependencyChange>
                            <logDependencyChanges>false</logDependencyChanges>
                            <overwriteChangedDependencies>false</overwriteChangedDependencies>
                            <inputFile>${project.build.directory}/classes/features.xml</inputFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>
                                        ${project.build.directory}/server-conf-ok/META-INF/settings/tpl/kimios.properties
                                    </file>
                                    <type>properties</type>
                                    <classifier>kimios-server-cfg</classifier>
                                </artifact>
                                <artifact>
                                    <file>
                                        ${project.build.directory}/client-conf-ok/META-INF/settings/tpl/kimios.properties
                                    </file>
                                    <type>properties</type>
                                    <classifier>kimios-client-cfg</classifier>
                                </artifact>
                                <artifact>
                                    <file>target/classes/kimios-ds.xml</file>
                                    <type>xml</type>
                                    <classifier>datasource</classifier>
                                </artifact>
                                <artifact>
                                    <file>${project.build.directory}/feature/feature.xml</file>
                                    <type>xml</type>
                                    <classifier>features</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
